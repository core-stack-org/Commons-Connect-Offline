        {
          "type": "html",
          "name": "crop_note_1",
          "html": "<span style=\"font-size: large; color:red\">Please provide cropping pattern information for a few sample crop grid on land owned by people in this settlement</span>"
        },
        {
          "type": "text",
          "name": "crop_Grid_id",
          "title": "Crop Grid ID",
          "readOnly": true
        },
        {
          "type": "text",
          "name": "beneficiary_settlement",
          "title": "Name of Beneficiary's Settlement",
          "isRequired": true
        },
        {
          "type": "text",
          "name": "ben_father",
          "title": "Beneficiary's father's name"
        },
        {
          "type": "checkbox",
          "name": "select_multiple_widgets",
          "title": "What is the main source of irrigation on this land in this grid of the settlement? ( Select all that apply)",
          "choices": [
            "Rainfall",
            "Well",
            "Borewell",
            "Canal",
            "Pond",
            "Don't know"
          ]
        },
        {
          "type": "radiogroup",
          "name": "select_one_classified",
          "title": "What is this land classified as?",
          "choices": [
            "Upland",
            "Midland",
            "Lowland"
          ]
        },
        {
          "type": "radiogroup",
          "name": "Uncropped_barren_land",
          "title": "Is this grid classified as uncropped or barren land?",
          "choices": [
            "Yes",
            "No"
          ]
        },
        {
          "type": "checkbox",
          "name": "select_multiple_cropping_kharif",
          "visibleIf": "{Uncropped_barren_land} = 'No'",
          "title": "What are the different crops typically practiced as main crops on such lands during the Kharif season in this grid of the settlement?",
          "choices": [
            "Paddy",
            "Millets",
            "Pulses",
            "Vegetables",
            "Fruits",
            "Oil Seeds",
            "Fodder crop",
            "None",
            "Other"
          ]
        },
        {
          "type": "text",
          "name": "select_multiple_cropping_kharif_other",
          "visibleIf": "{select_multiple_cropping_kharif} contains 'Other'",
          "title": "Specify other"
        },
        {
          "type": "checkbox",
